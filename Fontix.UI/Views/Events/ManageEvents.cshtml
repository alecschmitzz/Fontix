@model IEnumerable<Fontix.UI.Models.Event>

@{
    ViewData["Title"] = "My Events";
}

<div class="d-flex">
    <h1>My Events</h1>
    <div class="align-self-center ms-auto justify-self-end">

        <button type="button" class="btn btn-secondary" data-mdb-toggle="modal" data-mdb-target="#addModal">
            <span>
                <strong>Add new</strong>
            </span>
            &nbsp;
            <i class="fas fa-plus"></i>
        </button>

        <!-- ADD MODAL -->
        @using (Html.BeginForm("Create", "Events", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="modal fade" id="addModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Add Event</h5>
                            <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body text-start">
                            <!-- OrganiserId input -->
                            <div class="select-wrapper mb-4">
                                <select class="select" name="OrganiserId">
                                    <option value="1">AlecEvents</option>
                                    <option value="2">TestEvents</option>
                                    <option value="3">MarkEvents</option>
                                    <option value="4">DennisEvents</option>
                                </select>
                                <label>Organiser</label>
                            </div>

                            <!-- Name input -->
                            <div class="form-outline mb-4">
                                <input type="text" name="Name" class="form-control"/>
                                <label class="form-label">Name</label>
                            </div>

                            <!-- Description input -->
                            <div class="form-outline mb-4">
                                <input type="text" name="Description" class="form-control"/>
                                <label class="form-label">Description</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="d-none d-md-table-cell">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th class="text-end pe-5">
            Acties
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="d-none d-md-table-cell">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="text-end">
                <div class="d-flex align-items-center justify-content-end">
                    @if (1 == 1)
                    {
                        <a type="button" class="btn btn-outline-primary px-2 py-1 ms-2" href="@Url.RouteUrl(new { action = "Details", controller = "Events", id = 1 })">
                            <span class="d-none d-md-inline">Details&nbsp;</span>
                            <i class="fas fa-bars"></i>
                        </a>

                        <button type="button" class="btn btn-outline-danger px-2 py-1 ms-1" data-mdb-toggle="modal" data-mdb-target="#confirmDelectionModal-@item.Id">
                            <i class="fas fa-trash-can"></i>
                        </button>

                        /* DELETE MODAL */
                        @using (Html.BeginForm("Delete", "Events", new { id = item.Id }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <!-- Modal -->
                            <div class="modal fade" id="confirmDelectionModal-@item.Id" tabindex="-1" aria-labelledby="confirmDelectionModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="confirmDelectionModalLabel">Confirm deletion</h5>
                                            <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body text-start">
                                            Are you sure you want to delete event <b>@item.Id</b>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </td>
        </tr>
    }
    </tbody>

</table>