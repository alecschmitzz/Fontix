<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Fontix.UI</title>

    <!-- Font Awesome -->
    <link
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        rel="stylesheet"/>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- MDB -->
    <link
        href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.css"
        rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true"/>

    <!-- AOS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
</head>
<body>
<div id="page-container">
    <div id="content-wrap">
        <header>
            <!-- Navbar -->
            <a href="@Url.Action("Index", "Home")">
                <img
                    src="~/assets/fontix-logo-color-transparent_v2.png"
                    height="30"
                    alt="Fontix Logo"
                    loading="lazy"
                    style="position: absolute;
                       top: 50px;
                       left: 50px;
                       height: 50px;"/>
            </a>
            @Html.Partial("_Navbar")
            <!-- Navbar -->
        </header>
        <div class="container" style="padding-top: 150px;padding-bottom: 50px;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>


        <!-- Footer -->
        <footer class="text-center text-lg-start bg-light text-muted">

            <!-- Section: Links  -->
            <section class="pt-3">
                <div class="container text-center text-md-start mt-4">
                    <!-- Grid row -->
                    <div class="row mt-3">
                        <!-- Grid column -->
                        <div class="col-12 col-md-3 mx-auto mb-4">
                            <!-- Content -->
                            <h6 class="text-uppercase fw-bold mb-4 w-100">
                                <img
                                    src="~/assets/fontix-logo-transparent.png"
                                    style="max-width: 100%; object-fit: contain; opacity: 55%"
                                    height="50"
                                    alt="Fontix Logo"
                                    loading="lazy"/>
                            </h6>
                            <p>
                                Fontix, your ticket to unforgettable experiences!
                            </p>
                        </div>
                        <!-- Grid column -->

                        <!-- Grid column -->
                        <div class="col-12 col-md-3 mx-auto mb-4">
                            <h6 class="text-uppercase fw-bold mb-2">Contact</h6>
                            <table class="table-sm text-start mx-auto mx-md-0">
                                <tbody>
                                <tr>
                                    <th scope="row">
                                        <i class="fas fa-home me-3"></i>
                                    </th>
                                    <td>
                                        <a class="text-muted" href="https://goo.gl/maps/6nLkCpWuELoP9k9LA" target="_blank">
                                            Rachelsmolen 1 R10,<br/>
                                            5612 MA Eindhoven
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        <i class="fas fa-envelope me-3"></i>
                                    </th>
                                    <td>
                                        <a class="text-muted" href="mailto:info@fontix.nl" target="_blank">info@fontix.nl</a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        <i class="fas fa-phone me-3"></i>
                                    </th>
                                    <td>
                                        <a class="text-muted" href="tel:+31636552527" target="_blank">
                                            +31 6 36 55 25 27
                                        </a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                            <!-- Links -->
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Grid row -->
                </div>
            </section>
            <!-- Section: Links  -->

            <!-- Copyright -->
            <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
                © @DateTime.Now.Year Copyright:
                <a class="text-reset fw-bold" href="https://fontix.nl/">fontix.nl</a>
            </div>
            <!-- Copyright -->
        </footer>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/footer.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<!-- MDB -->
<script
    type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js">
</script>
<script>
    AOS.init();
</script>
@* <script src="~/js/site.js" asp-append-version="true"></script> *@
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>